{
  "name": "bpk-component-text",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/bpk-component-text/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "BABEL_ENV=dev babel src --out-dir dist --extensions \".ts,.tsx,.js,.jsx\" --config-file ../../babel.config.js",
        "cwd": "packages/bpk-component-text"
      },
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "TZ=Etc/UTC jest --coverage --testPathPatterns='{projectRoot}' --collectCoverageFrom='{projectRoot}/src/**/*.{js,jsx,ts,tsx}'",
        "cwd": "{workspaceRoot}"
      },
      "outputs": [
        "{workspaceRoot}/coverage"
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "{projectRoot}/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "stylelint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "stylelint '{projectRoot}/**/*.scss' --allow-empty-input",
        "cwd": "{workspaceRoot}"
      }
    }
  },
  "tags": [
    "type:package",
    "scope:backpack"
  ]
}
