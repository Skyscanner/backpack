{
  "name": "bpk-mixins",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/bpk-mixins",
  "projectType": "library",
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "TZ=Etc/UTC jest --coverage --coverageThreshold='{\"global\": {\"branches\": 10, \"functions\": 35, \"lines\": 45, \"statements\": 45}}' --testPathPatterns='{projectRoot}' --collectCoverageFrom='{projectRoot}/src/**/*.{js,jsx,ts,tsx}'",
        "cwd": "{workspaceRoot}"
      },
      "outputs": [
        "{workspaceRoot}/coverage"
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "{projectRoot}/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "stylelint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "stylelint '{projectRoot}/**/*.scss' --allow-empty-input",
        "cwd": "{workspaceRoot}"
      }
    }
  },
  "tags": [
    "type:package",
    "scope:backpack",
    "sass-only",
    "special-case"
  ]
}
