{
  "name": "backpack",
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=4.0.0"
  },
  "private": true,
  "scripts": {
    "postinstall:native": "(cd ./native && npm install)",
    "postinstall": "npm run postinstall:native && npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "lerna": "lerna",
    "clean:dist": "rm -rf dist",
    "clean:lerna": "lerna clean --yes",
    "clean:node_modules": "rm -rf node_modules",
    "clean:node_modules_native": "(cd ./native && rm -rf node_modules)",
    "clean": "npm run clean:dist && npm run clean:lerna && npm run clean:node_modules && npm run clean:node_modules_native",
    "lint:scss": "stylelint 'packages/**/*.scss' --syntax scss",
    "lint:scss:fix": "stylefmt",
    "lint:js": "eslint . .storybook --ext .js,.jsx",
    "lint:js:fix": "eslint . .storybook --ext .js,.jsx --fix",
    "lint": "npm run lint:js && npm run lint:scss",
    "jest:update": "jest --updateSnapshot",
    "jest:watch": "jest --watch",
    "jest": "jest --coverage",
    "build:tokens": "lerna run tokens --scope bpk-tokens",
    "build:svgs": "lerna run svgs --scope bpk-svgs",
    "build": "npm run build:tokens && npm run build:svgs && lerna run build",
    "storybook": "start-storybook -p 9001",
    "sassdoc": "sassdoc {packages/bpk-mixins/src/**/*,packages/bpk-svgs/dist/*,packages/bpk-tokens/tokens/base.default}.scss -d dist/sassdoc -v --strict --debug",
    "docs": "webpack-dev-server",
    "docs:dist": "npm run clean:dist && NODE_ENV=production webpack && npm run sassdoc",
    "docs:dist:gzip": "npm run docs:dist && gulp",
    "start": "npm run build && npm run storybook",
    "native": "(cd ./native && npm run storybook)",
    "test": "npm run lint && npm run jest && npm run test:native",
    "test:native": "(cd ./native && npm test)",
    "ios": "(cd ./native && npm run ios)",
    "android": "(cd ./native && npm run android)",
    "check-owners": "npm whoami && grep -E $(npm whoami) NPM_OWNERS && node scripts/npm/check-owners.js",
    "publish": "npm run check-owners && npm run build && git pull --rebase && npm run test && lerna publish",
    "danger": "danger"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Skyscanner/backpack.git"
  },
  "author": "Backpack Design System <backpack@skyscanner.net>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@storybook/addon-actions": "^3.1.9",
    "@storybook/addon-links": "^3.1.6",
    "@storybook/react": "^3.1.9",
    "async": "^2.1.4",
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "css-loader": "^0.28.4",
    "danger": "^1.2.0",
    "del": "^3.0.0",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-skyscanner": "^2.0.0",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "gulp": "^3.9.1",
    "gulp-chmod": "^2.0.0",
    "gulp-cli": "^1.2.2",
    "gulp-clone": "^1.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-gzip": "^1.4.0",
    "gulp-jsonlint": "^1.2.0",
    "gulp-rename": "^1.2.2",
    "gulp-svgmin": "^1.2.3",
    "jest": "^20.0.4",
    "json-loader": "^0.5.4",
    "lerna": "^2.0.0",
    "lodash": "^4.17.4",
    "marked": "^0.3.6",
    "merge-stream": "^1.0.1",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "prop-types": "^15.5.10",
    "q": "^1.4.1",
    "raw-loader": "^0.5.1",
    "react": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-helmet": "^3.3.0",
    "react-router": "^2.6.1",
    "react-svg-loader": "^1.1.1",
    "react-test-renderer": "^15.4.1",
    "rimraf": "^2.5.4",
    "sass-loader": "^6.0.6",
    "sassdoc": "^2.1.20",
    "static-site-generator-webpack-plugin": "github:skyscanner/static-site-generator-webpack-plugin#7bac616",
    "style-loader": "^0.18.2",
    "stylefmt": "^6.0.0",
    "stylelint": "^8.0.0",
    "stylelint-config-skyscanner": "^1.0.0",
    "theo": "^5.0.0",
    "tinycolor2": "^1.4.1",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.6.1",
    "wrapper-webpack-plugin": "^1.0.0",
    "zip-it-loader": "^0.3.0"
  },
  "jest": {
    "verbose": true,
    "testRegex": "packages/.*-test\\.js$",
    "testPathIgnorePatterns": [
      "native/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!bpk)"
    ],
    "moduleNameMapper": {
      "react-transition-group/CSSTransitionGroup": "<rootDir>/scripts/jest/cssTransitionGroupStub.js",
      "^.+\\.scss$": "<rootDir>/scripts/jest/styleStub.js",
      "^.+\\.svg$": "<rootDir>/scripts/jest/fileStub.js"
    },
    "coverageThreshold": {
      "global": {
        "statements": 75,
        "branches": 70,
        "functions": 75,
        "lines": 75
      }
    }
  }
}
